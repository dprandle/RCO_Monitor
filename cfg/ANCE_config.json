{
    "logging_enabled": true,
    "simulate_radios": true,
    "simulation_period": 1000,
    "simulation_high_vswr_period_count": 5,
    "simulation_random_squelch_break_period_count": 7,
    "ip_lower_bound": 10,
    "ip_upper_bound": 13,
    "max_radio_retry_reconnect_count": 10,
    "connection_timeout": {
        "seconds": 0,
        "microseconds": 100000
    },
    "loggers": {
        "All_500ms": {
            "dir_path":"/media/usb0/csvlogs",
            "period": 500,
            "ptt_status": {
                "title": "PTT",
                "equal":"OFF | LOCAL | REMOTE | TEST_RF"
            },
            "squelch_status": {
                "title": "Squelch"
            },
            "forward_power": {
                "title": "Fwd Pwr"
            },
            "vswr": {
                "title": "VSWR"
            },
            "agc": {
                "title": "AGC"
            },
            "line_level": {
                "title": "Line Lvl"
            }
        },
        "PTT_SQ_Active_Changed_250ms": {
            "dir_path":"/media/usb0/csvlogs",
            "period": 250,
            "ptt_status": {
                "title": "PTT",
                "change": true,
                "equal":"LOCAL | REMOTE | TEST_RF"
            },
            "squelch_status": {
                "title": "Squelch",
                "change":true,
                "equal":"OPEN"
            },
            "forward_power": {
                "title": "Fwd Pwr"
            },
            "vswr": {
                "title": "VSWR"
            },
            "agc": {
                "title": "AGC"
            },
            "line_level": {
                "title": "Line Lvl"
            }
        },
        "PTT_SQ_Changed_100ms": {
            "log_changes_to_status": true,
            "dir_path":"/media/usb0/csvlogs",
            "period": 100,
            "ptt_status": {
                "title": "PTT",
                "change": true
            },
            "squelch_status": {
                "title": "Squelch",
                "change": true
            }
        },
        "High_VSWR_1000ms": {
            "dir_path":"/media/usb0/csvlogs",
            "period": 1000,
            "forward_power": {
                "title": "Fwd Pwr"
            },
            "vswr": {
                "title":"VSWR",
                "greater_than": 1.7
            }
        }
    }
}